alias lh='ls -Ahl'

## Functions
vermp() { 
  sed -i -e "1i ### `git config user.email` [rev: `printf "%x\n" $(date +%y%j%H%M)`\]" -e '/^#.*@.*rev/'d $1 && head -1 $1; 
}

